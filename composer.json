{
    "name": "jacmoe/yii2-app-advanced-zurbified",
    "description": "Yii 2 Advanced Gulp Sass Application Template using Zurb Foundation for Sites",
    "keywords": ["yii2", "framework", "advanced", "gulp", "sass", "project template"],
    "type": "project",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.6",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "zurb/foundation": "^6.0",
        "bower-asset/motion-ui": "^1.1",
        "bower-asset/font-awesome": "^4.5",
        "bower-asset/sass-rem": "^1.2",
        "bower-asset/what-input": "^1.1"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "npm install",
            "gulp build"
        ]
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
